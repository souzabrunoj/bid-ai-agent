# Bid AI Agent - Environment Variables Configuration
# Copy this file to .env and configure your settings

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="Bid AI Agent"
APP_VERSION="1.0.0"
DEBUG_MODE=false
LOG_LEVEL="INFO"

# ============================================
# LOCAL LLM SETTINGS
# ============================================
# Path to local LLM model file (e.g., .gguf format)
LLM_MODEL_PATH="./models/llama-3-8b.gguf"

# Model parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
LLM_CONTEXT_SIZE=8192

# ============================================
# DOCUMENT PROCESSING
# ============================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=50

# OCR settings for scanned PDFs
OCR_ENABLED=true
OCR_LANGUAGE="por"

# ============================================
# OUTPUT SETTINGS
# ============================================
OUTPUT_DIR="./output"
CREATE_ZIP_EXPORT=true

# ============================================
# SECURITY SETTINGS
# ============================================
# Enable file validation and sanitization
FILE_VALIDATION_ENABLED=true

# Maximum number of documents per processing
MAX_DOCUMENTS_PER_BATCH=50

# ============================================
# LOGGING
# ============================================
LOG_FILE_PATH="./logs/app.log"
LOG_ROTATION_MAX_SIZE_MB=10
